{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "es6",
    "lib": ["es2015", "es2016", "es2017", "dom", "esnext.asynciterable"],
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": true,
    "stripInternal": true,
    "declarationDir": "dist",
    "outDir": "dist"
  },
  "include": ["src"]
}
